{% extends 'base.html.twig' %}

{% block title %}
    La liste

{% endblock %}

{% block body %}
    <section>
        <div class="flex_between">
            {% if currentPage > 1 %}
                <a href="{{ path('app_wish', {'page': currentPage - 1}) }}">Previous page</a>
            {% endif %}
            <div> -- Page {{ currentPage }} --</div>
            {% if currentPage < pagesMax %}
                <a href="{{ path('app_wish', {'page' : currentPage + 1}) }}">Next page</a>
            {% endif %}
        </div>
    </section>
    <section>
        <table>
            <thead>
            <tr>
                <th>Date</th>
                <th>Souhait</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            {% for wish in wishes %}

                <tr>
                    <th>{{ wish.dateCreated|date('D d/m/Y') }}</th>
                    <th>{{ wish.name }}</th>
                    <td><a href="{{ path('app_detail', {'id': wish.id}) }}">Détails</a></td>
                </tr>
            {% else %}
                Pas d'éléments dans la bucketlist
            {% endfor %}
            </tbody>
        </table>
    </section>

{% endblock %}